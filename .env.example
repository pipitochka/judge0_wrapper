# ===============================================
# Judge0 Configuration
# ===============================================

# Redis Configuration
REDIS_PASSWORD=YourSecureRedisPassword123

# PostgreSQL Configuration
POSTGRES_DB=judge0
POSTGRES_USER=judge0
POSTGRES_PASSWORD=YourSecurePostgresPassword123

# Judge0 Authentication (optional - leave empty to disable)
AUTHN_HEADER=X-Auth-Token
AUTHN_TOKEN=YourSecureJudge0Token123

# ===============================================
# Task Checker (FastAPI) Configuration
# ===============================================

# Uvicorn Server Configuration
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
# UVICORN_WORKERS=4  # Uncomment to override default (CPU count)

# Authentication Configuration
AUTH_JWT_SECRET=YourSecureJWTSecret123
AUTH_JWT_ALGORITHM=HS256

# Judge0 Service Connection
JUDGE0_AUTHN_HEADER=X-Auth-Token
JUDGE0_AUTHN_TOKEN=YourSecureJudge0Token123
JUDGE0_HOST=judge0-server
JUDGE0_PORT=2358
